<div class="span4"><h1>Data Bags</h1>
<ul class="unstyled">
<% bags.all.each do |bag| -%>
  <li><a href="/data_bag/<%= bag[:name] %>"><%= bag[:name] %></a></li>
<% end -%>
</ul>
</div>
<div class="span4">
  <form class="form-search" type="text" method="get" action="/data_bags">
      <legend>Data Bag search</legend>
      <div class="input-append">
        <input class="input-block-level search-query" id="appendedInputButton" type="text" name="q"/>
        <button class="btn" id="submit" type="submit">Search</button>
      </div>
  </form>
</div>
