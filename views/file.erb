<%== erb :cookbook_head, layout: false %>
<h1>
<% if cookbook_file.type == 'recipes' -%>
<%= cookbook.chef_id %>::<%= cookbook_file.name.gsub('.rb', '') %>
<% else -%>
<%= cookbook_file.path %>
<% end -%>
  <a role='button' class='btn btn-link' href='<%= url "/download#{request.path}" %>' title='Download file'><span class='glyphicon glyphicon-download'></span></a>
</h1>
<% if content -%>
<%   if content == 'image' -%>
<img src='<%= url "download#{request.path}" %>'>
<%   else -%>
<%==   content %>
<%   end -%>
<% else -%>
<p class='lead'>The content of this file cannot be displayed. <a href='<%= url "/download#{request.path}" %>'>Download to your computer</a> to view it locally.</p>
<% end -%>
