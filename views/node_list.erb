<div class="row-fluid">
  <div class="span4">
    <h1>Nodes</h1>
    <ul class="unstyled">
<% nodes.each do |node| -%>
      <li><a href="/node/<%= node[:name] %>"><%= node[:name] %></a></li>
<% end -%>
    </ul>
  </div>
  <div class="span4">
    <form class="form-search" type="text" method="get" action="/nodes">
        <legend>Node search</legend>
        <div class="input-append">
          <input class="input-block-level search-query" id="appendedInputButton" type="text" name="q"/>
          <button class="btn" id="submit" type="submit">Search</button>
        </div>
    </form>
<% if settings.rb.node_search.length > 0 -%>
    <h2>Saved searches</h2>
    <ul class="unstyled">
<%   settings.rb.node_search.each do |link_name, query| -%>
      <li><a href='/nodes?q=<%= query %>'><%= link_name %></a></li>
<%   end -%>
    </ul>
<% end -%>
  </div>
</div>
