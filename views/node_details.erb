        <div class="span10"><h3>Node details</h3>
          <% @nodes = chef_server.node.all %>
          <% @node_array = Array.new %>

          <% @nodes.each do |node| %>
            <% @node_array.push(node[:name]) %>
          <% end %>

              <% @node_array.each do |node_name| %>
                <h3><%= chef_server.node.find(node_name)[:name] %></h3>
                <p><%= chef_server.node.find(node_name)[:name] %>(<%= chef_server.node.find(node_name)[:automatic][:fqdn] %>) (<%= chef_server.node.find(node_name)[:name] %>[<%= chef_server.node.find(node_name)[:automatic][:ipaddress] %>])</p
                <p>Environment: <%= chef_server.node.find(node_name)[:chef_environment] %></p>
                <p>Tags:<ul class="inline"><% chef_server.node.find(node_name)[:normal][:tags].each do |tag| %>
                  <li><%= tag %></li>
                  <% end %>
                </ul></p>
                <h4>Run list:</h4>
                <p><ul><% chef_server.node.find(node_name)[:run_list].each do |run_list| %>
                  <li><%= run_list %></li>
                  <% end %>
                </ul>
                </p>
              <% end %>

              <h4>Attributes (JSON)</h4>
              <%= chef_server.node.find('wordpress')._attributes_ %>
        </div>
      </div>
      </div>
