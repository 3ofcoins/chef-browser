<div class="span10">
  <a class="btn" href="/data_bag_list">Back</a>
  <h3>Data bag item: <%= data_bag_item %></h3>
  <ul class="nav nav-pills">
    <li><a href="#jsonpath" data-toggle="tab">JSON attributes</a></li>
    <li><a href="#jsonraw" data-toggle="tab">JSON raw</a></li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane" id="jsonraw">
      <h3>JSON raw</h3>
      <pre>
<%= parent_data_bag.to_json %>
      </pre>
    </div>
    <div class="tab-pane" id="jsonpath">
      <h3>JSON attributes</h3>
      <table class="table table-condensed table-striped table-hover">
<% with_jsonpath(parent_data_bag._attributes_) do |path, value| -%>
      <tr><td><%= path %></td><td><%== pretty_value(value) %></td></tr>
<% end -%>
      </table>
  </div>
</div>
