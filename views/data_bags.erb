            <div class="span10"><h3>Data bags</h3>
            <% my_server = Ridley.new(server_url: "http://127.0.0.1:4000", client_name: "marta", client_key: "/home/marta/.chef/marta.pem") %>
            <% @bags = my_server.data_bag %>
            <% @data_bags_list = Array.new %>

            <% @bags.all.each do |bag| %>
              <% @data_bags_list.push(bag[:name]) %>
            <% end %>

            <table class="table table-bordered table-striped">
            <tr><th>Data bag list:</th></tr>
            <% @data_bags_list.each do |bag| %>
              <td><%= bag %></td>
            <% end %>
            </tr>
            </table>

#Data bag item list, first for one item only

<h4>Data bag name: <%= @bags.all.first[:name] %></h4>
